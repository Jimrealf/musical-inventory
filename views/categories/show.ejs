<!DOCTYPE html>
<html>
<head>
    <title><%= category.name %></title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h1><%= category.name %></h1>
    <p><%= category.description %></p>
    <a href="/items/new">Add Item</a> | <a href="/categories/<%= category.id %>/edit">Edit Category</a>
    <form action="/categories/<%= category.id %>?_method=DELETE" method="POST" style="display:inline;">
        <input type="password" name="adminPassword" placeholder="Admin Password" required>
        <button type="submit">Delete Category</button>
    </form>
    <h2>Items</h2>
    <ul>
    <% items.forEach(item => { %>
        <li>
            <%= item.name %> - $<%= item.price %> (Stock: <%= item.stock %>)
            <a href="/items/<%= item.id %>/edit">Edit</a>
            <form action="/items/<%= item.id %>?_method=DELETE" method="POST" style="display:inline;">
                <input type="password" name="adminPassword" placeholder="Admin Password" required>
                <button type="submit">Delete</button>
            </form>
        </li>
    <% }) %>
    </ul>
    <a href="/categories">Back to Categories</a>
</body>
</html>